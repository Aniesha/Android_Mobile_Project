<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="edu.uwi.sta.comp3275.SendVoiceMessage"
    tools:showIn="@layout/activity_send_voice_message">


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play"
        android:id="@+id/btn_play"
        android:onClick="play"
        android:src="@drawable/ic_play_arrow_black_24dp"
        android:layout_alignTop="@+id/btn_stop"
        android:layout_toRightOf="@+id/btn_stop"
        android:layout_toEndOf="@+id/btn_stop"
        android:backgroundTint="#00ffffff" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="stop"
        android:id="@+id/btn_stop"
        android:onClick="stop"
        android:src="@drawable/ic_stop_black_24dp"
        android:layout_alignTop="@+id/btn_record"
        android:layout_toRightOf="@+id/btn_record"
        android:layout_toEndOf="@+id/btn_record"
        android:backgroundTint="#00ffffff" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="record"
        android:id="@+id/btn_record"
        android:onClick="record"
        android:src="@drawable/ic_mic_black_24dp"
        android:layout_marginBottom="75dp"
        android:layout_marginLeft="49dp"
        android:layout_marginStart="49dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:backgroundTint="#00ffffff" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_send"
        android:src="@drawable/ic_bluetooth_black_24dp"
        android:layout_alignTop="@+id/btn_play"
        android:layout_toRightOf="@+id/btn_play"
        android:layout_toEndOf="@+id/btn_play"
        android:backgroundTint="#00ffffff" />

</RelativeLayout>
